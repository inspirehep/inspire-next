{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://labs.inspirehep.net/schemas/conferences-0.0.1.json",
    "properties": {
        "acronym": {
            "title": "Conference acronym",
            "type": "string"
        },
        "alternative_titles": {
            "items": {
                "title": "Alternative title",
                "type": "string"
            },
            "title": "Alternative titles",
            "type": "array",
            "uniqueItems": true
        },
        "closing_date": {
            "format": "date",
            "title": "Conference closing date",
            "type": "string"
        },
        "cnum": {
            "pattern": "C\\d\\d-\\d\\d(-\\d\\d)?(\\.\\d+)",
            "title": "Conference ID (CNUM)",
            "type": "string"
        },
        "contact_person": {
            "title": "Contact person",
            "type": "string"
        },
        "contact_email": {
            "format": "email",
            "title": "Contact email",
            "type": "string"
        },
        "field_code": {
            "items": {
                "description": "FIXME: shall we normalize this to the usual arXiv?",
                "enum": [
                    "Astrophysics",
                    "Phenomenology-HEP",
                    "..."
                ],
                "title": "Field code",
                "type": "string"
            },
            "title": "Field codes",
            "type": "array",
            "uniqueItems": true
        },
        "keywords": {
            "items": {
                "title": "Free keyword",
                "type": "string"
            },
            "title": "Free keywords",
            "type": "array",
            "uniqueItems": true
        },
        "nonpublic_note": {
            "title": "Non public note",
            "type": "string"
        },
        "note": {
            "title": "Note",
            "type": "string"
        },
        "opening_date": {
            "format": "date",
            "title": "Conference opening date",
            "type": "string"
        },
        "place": {
            "pattern": "\\.+, \\.+",
            "title": "Conference place",
            "type": "string"
        },
        "proceedings": {
            "description": "FIXME: Shall we rather have a nice link towards the proceedings record? Can we simply derive it?",
            "format": "url",
            "title": "Conference proceedings URL",
            "type": "string"
        },
        "series": {
            "title": "Conference series",
            "type": "string"
        },
        "series_number": {
            "title": "Conference series number",
            "type": "integer"
        },
        "short_description": {
            "title": "Short description",
            "type": "string"
        },
        "subtitle": {
            "title": "Conference subtitle",
            "type": "string"
        },
        "title": {
            "title": "Conference title",
            "type": "string"
        },
        "transparencies": {
            "format": "url",
            "title": "Conference transparencies URL",
            "type": "string"
        },
        "url": {
            "format": "url",
            "title": "Conference URL",
            "type": "string"
        }
    },
    "title": "Conference",
    "type": "object"
}
