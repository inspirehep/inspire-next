{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://labs.inspirehep.net/schemas/hep-0.0.1.json",
    "properties": {
        "acquisition_source": {
            "$ref": "http://labs.inspirehep.net/schemas/acquisition_source-0.0.1.json#/acquisition_source"
        },
        "abstract": {
            "items": {
                "properties": {
                    "source": {
                        "description": "FIXME: is there an enumerable list of sources?",
                        "enum": ["AIP", "APS", "Annual Reviews", "Astronomical Society of the Pacific", "Author", "Bulgarian Academy of Sciences", "CERN", "CERN/SLAC", "Cambridge University Press", "Canadian Center of Science and Education", "DESY", "DESY/SLAC", "EDP Sciences", "ELSEVIER", "Education and Upbringing", "Elsevier", "European Astronomical Society", "HEPDATA", "HINDAWI", "IEEE", "INDICO", "INSPIRE", "IOP", "IOS Press", "IPAP", "Indian National Science Academy", "International Press", "International Society for Optics and Photonics" "Internet Academy", "JACoW", "Kharkov Institute of Physics and Technology", "MDPI", "MPI Grav. Phys., Potsdam", "NRC Research Press", "National Academy of Sciences of Armenia", "Niscair", "Oxford Journals", "Oxford University Press", "Physical Society of Japan", "Polish Physical Society", "Publisher", "Royal Society", "SIGMA", "Springer", "Tomsk State Pedagogical University", "TÜBİTAK", "WILEY", "WS", "WSP", "World Scientific"]
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": ["source", "value"],
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "authors": {
            "description": "List with all the authors",
            "items": {
                "properties": {
                    "affiliations": {
                        "items": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "description": "The affiliation as it appears on the paper",
                                    "type": "string"
                                },
                                "recid": {
                                    "description": "Record ID in the Institution collection",
                                    "type": "integer"
                                },
                                "curated_relation": {
                                    "description": "Did a cataloguer proof-checked the recid?",
                                    "type": "bool"
                                }
                            }
                        },
                        "type": "array"
                    },
                    "email": {
                        "format": "email",
                        "type": "string"
                    },
                    "inspire_bai": {
                        "description": "INSPIRE BAI when available",
                        "type": "string",
                        "pattern": "(\\w+\\.)+\\d+"
                    },
                    "inspire_id": {
                        "description": "Legacy INSPIRE ID when available",
                        "type": "string",
                        "pattern": "INSPIRE-\\d+"
                    },
                    "name": {
                        "description": "author name as it appears in the paper",
                        "type": "string",
                        "format": ".+, .+"
                    },
                    "orcid": {
                        "description": "ORCID Id when available",
                        "format": "orcid",
                        "type": "string",
                        "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{4}"
                    },
                    "other_ids": {
                        "description": "Just in case...",
                        "type": "array",
                        "items": {
                            "properties": {
                                "source": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "role": {
                        "description": "Role of the author within the paper. So far only Editor was captured.",
                        "enum": ["ed."]
                    },
                    "recid": {
                        "description": "Record ID of the person in HepNames",
                        "type": "integer"
                    },
                    "curated_relation": {
                        "description": "Was this signature actually claimed or proof-checked by cataloguer?",
                        "type": "bool",
                        "default": false
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "experiment": {
            "properties": {
                "value": {
                    "description": "Raw string. Do we actually need it at all? Can it be taken from the record ID? NOTE: I am not adding accelerator field. Do we have papers on accelerators but not on experiments? Can we always derive the accelerator from the experiment?",
                    "type": "string",
                "recid": {
                    "description": "Record ID of the corresponding experiment.",
                    "type": "integer"
                },
                "curated_relation": {
                    "description": "Was the experiment actually proofchecked by a cataloguer?",
                    "type": "bool",
                    "default": false
                }
            },
            "required": ["value"],
            "type": "object"
        },
        "book_series": {
            "properties": {
                "title": {
                    "description": "Title of the book series",
                    "type": "string"
                },
                "volume": {
                    "description": "Specific volume number",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "classification_number": {
            "items": {
                "properties": {
                    "description": "PACS or PDG codes. FIXME: What about better separating these into a PACS field and a PDG field?"
                    "value": {
                        "type": "string"
                    },
                    "standard": {
                        "enum": ["PACS", "PDG"]
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "collaboration": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "citeable": {
            "description": "Whether this document can be cited. FIXME: can this be derived from other properties?",
            "type": "bool"
        },
        "core": {
            "description": "Whether this document is CORE and hence need special curation. NOTE: set this explicitly to false, in order to have real noncore.",
            "type": "bool"
        },
        "document_type": {
            "type": "array",
            "items": {
                "enum": ["Published", "arXiv", "ConferencePaper", "Thesis", "Review", "Lectures", "Note", "Proceedings", "Introductory", "Book", "BookChapter", "Report"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "corporate_author": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "copyright": {
            "properties": {
                "holder": {
                    "description": "Copyright holder. FIXME: should we restrict this to an enum, or not?",
                    "enum": ["American Physical Society", "World Scientific Publishing Company", "authors", "CERN"],
                },
                "material": {
                    "enum": ["Article"]
                },
                "statement": {
                    "description": "FIXME: What's that? there are all sorts of usages on production!",
                    "type": "string"
                },
                "url": {
                    "format": "url",
                    "type": "string"
                },
                "year": {
                    "type": "integer",
                }
            },
            "type": "object"
        },
        "dois": {
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "string",
                        "pattern": "10\\.\\d+(\\.\\d+)?/.+"
                    },
                    "source": {
                        "description": "Issuing of DOI. FIXME: should we have an enum",
                        "type": "string"
                    },
                    "qualifying_information": {
                        "enum": ["Erratum", "Addendum", "ebook", "Corrigendum"]
                    }
                }
            },
            "type": "array"
        },
        "funding_info": {
            "description": "FIXME: Do we care about this? So far only 349 records were tagged and all for a single EU project.",
            "items": {
                "properties": {
                    "agency": {
                        "type": "string"
                    },
                    "grant_number": {
                        "type": "string"
                    },
                    "project_number": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "hidden_note": {
            "description": "FIXME: what about 595__d??",
            "items": {
                "properties": {
                    "cern_reference": {
                        "description": "FIXME: Do we know what this is? do we care?",
                        "type": "string"
                    },
                    "source": {
                        "description": "FIXME: What's the semantic of this source?",
                        "enum": ["SPIRES-HIDDEN", "CERN", "submitter"]
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "imprint": {
            "items": {
                "properties": {
                    "date": {
                        "format": "date",
                        "type": "string"
                    },
                    "place": {
                        "type": "string"
                    },
                    "publisher": {
                        "description": "FIXME: an enum?",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "isbn": {
            "items": {
                "properties": {
                    "value": {
                        "format": "isbn",
                        "type": "string"
                    },
                    "medium": {
                        "description": "FIXME: this really need to be an enum and cleaned up. What is Print?!",
                        "enum": ["Print", "Online", "ebook", "hardcover", "paperback"]
                    }
                },
                "type": "object",
                "required": ["value"]
            },
            "type": "array",
            "uniqueItems": true
        },
        "language": {
            "description": "FIXME: we shall provide the ISO enum",
            "type": "string"
        },
        "license": {
            "items": {
                "properties": {
                    "imposing": {
                        "type": "string"
                    },
                    "license": {
                        "type": "string"
                    },
                    "material": {
                        "type": "string"
                    },
                    "url": {
                        "format": "url",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "public_notes": {
            "items": {
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "type": "object",
                "required": ["value"]
            },
            "type": "array",
            "uniqueItems": true
        },
        "number_of_pages": {
            "type": "integer"
        },
        "preprint_date": {
            "format": "date",
            "type": "string"
        },
        "publication_info": {
            "description": "FIXME: Shall we split conference information away? FIXME: shall we move the DOI and ISBN next to where it belongs? So that we can also align erratum and friends?",
            "items": {
                "properties": {
                    "conference_paper_info": {
                        "description": "FIXME: This is currently the CNUM",
                        "type": "string"
                    },
                    "journal_issue": {
                        "type": "string"
                    },
                    "journal_title": {
                        "type": "string"
                    },
                    "journal_volume": {
                        "type": "string"
                    },
                    "page_range": {
                        "description": "FIXME: for ejournals this could be the page index, but there is no realiable way to know whether something is a page index or a first page, does it?",
                        "type": "string"
                    },
                    "pubinfo_freetext": {
                        "type": "string"
                    },
                    "year": {
                        "minimum": 1000,
                        "maximum": 2050,
                        "type": "integer"
                    },
                    "recid": {
                        "description": "Record ID of the conference",
                        "type": "integer"
                    },
                    "curated_relation": {
                        "type": "bool"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "reference": {
            "items": {
                "properties": {
                    "authors": {
                        "type": "string"
                    },
                    "collaboration": {
                        "type": "string"
                    },
                    "doi": {
                        "type": "string",
                        "pattern": "10\\.\\d+(\\.\\d+)?/.+"
                    },
                    "editors": {
                        "type": "string"
                    },
                    "isbn": {
                        "type": "string",
                        "format": "isbn"
                    },
                    "journal_pubnote": {
                        "type": "string",
                        "pattern": ".*,.*,.*"
                    },
                    "maintitle": {
                        "type": "string"
                    },
                    "misc": {
                        "type": "string"
                    },
                    "number": {
                        "type": "integer"
                    },
                    "publisher": {
                        "type": "string"
                    },
                    "raw_reference": {
                        "type": "string"
                    },
                    "recid": {
                        "type": "integer"
                    },
                    "report_number": {
                        "type": "string"
                    },
                    "texkey": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "url"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "curated_relation": {
                        "type": "bool"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "arxiv_eprints": {
            "items": {
                "properties": {
                    "value": {
                        "type": "string",
                        "format": "\\d{4}.\\d{4}{5}|\\w+-\\+/\\d+"
                    },
                    "categories": {
                        "type": "list",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "type": "array",
            "uniqueItems": true
        },
        "report_number": {
            "items": {
                "properties": {
                    "value": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "primary": {
                        "type": "bool"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "spires_sysnos": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "subject_terms": {
            "items": {
                "properties": {
                    "scheme": {
                        "enum": ["INSPIRE", "arXiv", "APS", "PoS", "Elsevier"]
                    },
                    "source": {
                        "enum": ["automatically added based on DCC, PPF, DK", "submitter", "INSPIRE"]
                    },
                    "term": {
                        "type": "string"
                    }
                },
                "type": "object",
                "required": ["term"]
            },
            "type": "array",
            "uniqueItems": true
        },
        "superseding": {
            "items": {
                "type": "integer"
            },
            "type": "array",
            "uniqueItems": true
        },
        "external_system_number": {
            "items": {
                "properties": {
                    "institute": {
                        "type": "string"
                    },
                    "obsolete": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "thesaurus_terms": {
            "items": {
                "properties": {
                    "scheme": {
                        "enum": ["INSPIRE", "JACoW"]
                    },
                    "energy_range": {
                        "description": "FIXME: What... is... that!?",
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 9
                    },
                    "keyword": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "thesis": {
            "items": {
                "properties": {
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "degree_type": {
                        "description": "FIXME: this enum must be reviewed",
                        "enum": ["PhD", "Master", "Bachelor", "Diploma", "Habilitation", "Laurea", "Thesis"]
                    },
                    "university": {
                        "description": "FIXME: shall we match these with the insitution database? I guess so.",
                        "type": "string"
                    },
                    "recid": {
                        "description": "Record ID of the matched insitution.",
                        "type": "integer"
                    },
                    "curated_relation": {
                        "type": "bool"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "thesis_supervisor": {
            "items": {
                "properties": {
                    "recid": {
                        "type": "integer"
                    },
                    "affiliation": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": "string"
                            },
                            "recid": {
                                "type": "integer"
                            },
                            "curated_relation": {
                                "type": "bool"
                            }
                        }
                    },
                    "recid": {
                        "type": "integer"
                    },
                    "full_name": {
                        "type": "string"
                    },
                    "curated_relation": {
                        "type": "bool"
                    }
                },
                "type": "object",
                "required": ["full_name"]
            },
            "type": "array",
            "uniqueItems": true
        },
        "titles": {
            "items": {
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "subtitle": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "title_translation": {
            "items": {
                "properties": {
                    "subtitle": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "title_variation": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "url": {
            "items": {
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "doc_string": {
                        "type": "string"
                    },
                    "material_type": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "url"
                    },
                    "size": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "title"
    ],
    "type": "object"
}
