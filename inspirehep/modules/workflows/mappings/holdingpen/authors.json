{
    "mappings": {
        "authors": {
            "_all": {
                "enabled": false
            },
            "date_detection": false,
            "dynamic": "false",
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_workflow": {
                    "properties": {
                        "created": {
                            "type": "date"
                        },
                        "data_type": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "id_parent": {
                            "index": "not_analyzed",
                            "type": "integer"
                        },
                        "id_user": {
                            "index": "not_analyzed",
                            "type": "integer"
                        },
                        "id_workflow": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "modified": {
                            "type": "date"
                        },
                        "status": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "workflow_class": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "workflow_name": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "workflow_position": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "metadata": {
                    "properties": {
                        "_collections": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "acquisition_source": {
                            "properties": {
                                "date": {
                                    "type": "date"
                                },
                                "email": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                },
                                "method": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                },
                                "source": {
                                    "copy_to": [
                                        "source"
                                    ],
                                    "index": "not_analyzed",
                                    "type": "string"
                                },
                                "submission_number": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "collaboration": {
                            "properties": {
                                "recid": {
                                    "type": "integer"
                                },
                                "value": {
                                    "copy_to": [
                                        "global_fulltext"
                                    ],
                                    "index": "not_analyzed",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "collections": {
                            "properties": {
                                "primary": {
                                    "copy_to": [
                                        "collection"
                                    ],
                                    "index": "not_analyzed",
                                    "type": "string"
                                },
                                "secondary": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "date": {
                            "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                            "type": "date"
                        },
                        "date_and_time_of_latest_transaction": {
                            "format": "yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                            "type": "date"
                        },
                        "division": {
                            "type": "string"
                        },
                        "experiment_name": {
                            "copy_to": [
                                "experimentautocomplete"
                            ],
                            "type": "string"
                        },
                        "field_categories": {
                            "properties": {
                                "scheme": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "string"
                                },
                                "term": {
                                    "copy_to": [
                                        "subject"
                                    ],
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "institution": {
                            "properties": {
                                "affiliation": {
                                    "copy_to": [
                                        "affautocomplete"
                                    ],
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
