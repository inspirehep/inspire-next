{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
       "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "ICN": {
            "description": "HEP affiliation following new standards",
            "title": "New INSPIRE control number",
            "type": "array"
        },
        "address": {
          "items": {"$ref": "elements/address.json"},
          "title": "Address of the conference (usually there is only one)",
          "type": "array",
          "uniqueItems": true
        },
        "content_classification": {
            "items": {
                "title": "Content classification",
                "type": "string"
            },
            "title": "Content classification",
            "type": "array",
            "uniqueItems": true
        },
        "department": {
            "description": "Subordinate unit in native language",
            "title": "Department",
            "type": "array"
        },
        "core": {
            "description": "Is this a CORE institution?",
            "title": "CORE",
            "type": "boolean"
        },
        "department_acronym": {
            "description": "Subordinate unit well-known acronym",
            "title": "Department acronym",
            "type": "string"
        },
        "extra_words": {
            "title": "Extra words",
            "type": "array",
            "uniqueItems": true
        },
        "field_activity": {
            "items": {
                "enum": [
                    "UNIVERSITY",
                    "RESEARCH CENTER",
                    "COMPANY"
                ],
                "type": "string"
            },
            "title": "Field of activity",
            "type": "array"
        },
        "hidden_notes": {
            "items": {
                "title": "Hidden note",
                "type": "string"
            },
            "title": "Hidden notes",
            "type": "array",
            "uniqueItems": true
        },
        "historical_data": {
            "title": "Historical data",
            "type": "string"
        },
        "institution_acronym": {
            "description": "Corporate well-known acronym",
            "title": "Institution acronym",
            "type": "string"
        },
        "institution": {
            "description": "Corporate name in native language",
            "title": "Institution name",
            "type": "array"
        },
        "location": {
            "properties": {
                "latitude": {
                    "description": "FIXME: we can populate this programmatically with Google APIs",
                    "title": "latitude",
                    "type": "number"
                },
                "longitude": {
                    "description": "FIXME: we can populate this programmatically with Google APIs",
                    "title": "longitude",
                    "type": "number"
                }
            },
            "title": "GPS location",
            "type": "object"
        },
        "name_variants": {
            "items": {
                "properties": {
                    "source": {
                        "description": "FIXME: Do we really care about the source?",
                        "title": "Name variant source",
                        "type": "string"
                    },
                    "value": {
                        "title": "Name variant",
                        "type": "array"
                    }
                },
                "title": "Name variant",
                "type": "object"
            },
            "title": "Name variants",
            "type": "array",
            "uniqueItems": true
        },
        "obsolete_ICN": {
            "items": {
              "title": "Obsolete ICN",
              "type": "string"
            },
            "description": "ICN of obsolete inst for which this inst should be used instead",
            "title": "List of obsolete ICNs",
            "type": "array"
        },
        "obsolete_record": {
            "description": "record URI of obsolete inst for which this inst should be used instead",
            "title": "Obsolete record URI",
            "$ref": "json_reference.json"
        },
        "old_ICN": {
            "description": "HEP affiliation (spires name)",
            "title": "Old SPIRES control number",
            "type": "string"
        },
        "public_notes": {
            "items": {
                "title": "Public note",
                "type": "string"
            },
            "title": "Public notes",
            "type": "array",
            "uniqueItems": true
        },
        "non_public_notes": {
            "items": {
                "title": "Non-Public note",
                "type": "string"
            },
            "title": "FIXME: Difference between hidden note?",
            "type": "array",
            "uniqueItems": true
        },
        "related_institutes": {
            "items": {
                "description": "FIXME: Shall we rather separate in two fields? predecessors and parents?",
                "properties": {
                    "curated_relation": {
                        "title": "Is the relation curated?",
                        "type": "boolean"
                    },
                    "name": {
                        "title": "Name of related institute",
                        "type": "string"
                    },
                    "relation_type": {
                        "description": "FIXME: do we actually need 'successor' at all? Can't we derive it from predecessor?",
                        "enum": [
                            "predecessor",
                            "successor",
                            "parent"
                        ],
                        "title": "Relation type",
                        "type": "string"
                    },
                    "record": {
                        "title": "URI for the related institute record",
                        "$ref": "json_reference.json"
                    }
                },
                "title": "Related institute",
                "type": "object"
            },
            "title": "Related institutes",
            "type": "array",
            "uniqueItems": true
        },
        "time_zone": {
            "description": "FIXME: we can populate this programmatically with Google APIs",
            "enum": [
                "there",
                "must",
                "be",
                "one"
            ],
            "title": "Time zone",
            "type": "string"
        },
        "urls": {
            "$ref": "elements/urls.json"
        }
    },
    "title": "Institution",
    "type": "object"
}
