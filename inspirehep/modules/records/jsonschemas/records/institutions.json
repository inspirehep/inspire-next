{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "ICN": {
            "description": "HEP affiliation following new standards",
            "title": "New INSPIRE control number",
            "type": "array"
        },
        "address": {
            "items": {
                "$ref": "elements/address.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "core": {
            "description": "Is this a CORE institution?",
            "title": "CORE",
            "type": "boolean"
        },
        "department": {
            "description": "Subordinate unit in native language",
            "title": "Department",
            "type": "array"
        },
        "department_acronym": {
            "description": "Subordinate unit well-known acronym",
            "title": "Department acronym",
            "type": "string"
        },
        "extra_words": {
            "title": "Extra words",
            "type": "array",
            "uniqueItems": true
        },
        "field_activity": {
            "items": {
                "enum": [
                    "University",
                    "Research Center",
                    "Company",
                    "Other"
                ],
                "type": "string"
            },
            "title": "Field of activity",
            "type": "array"
        },
        "field_categories": {
            "items": {
                "$ref": "elements/field.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "hidden_notes": {
            "items": {
                "title": "Hidden note",
                "type": "string"
            },
            "title": "Hidden notes",
            "type": "array",
            "uniqueItems": true
        },
        "historical_data": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "institution": {
            "description": "Corporate name in native language",
            "title": "Institution name",
            "type": "array"
        },
        "institution_acronym": {
            "description": "Corporate well-known acronym",
            "title": "Institution acronym",
            "type": "string"
        },
        "location": {
            "additionalProperties": false,
            "properties": {
                "latitude": {
                    "description": "FIXME: we can populate this programmatically with Google APIs",
                    "title": "latitude",
                    "type": "number"
                },
                "longitude": {
                    "description": "FIXME: we can populate this programmatically with Google APIs",
                    "title": "longitude",
                    "type": "number"
                }
            },
            "title": "GPS location",
            "type": "object"
        },
        "name_variants": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "source": {
                        "description": "FIXME: Do we really care about the source?",
                        "enum": [
                            "DESY",
                            "DESY_AFF",
                            "ADS",
                            "INSPIRE"
                        ],
                        "title": "Name variant source",
                        "type": "string"
                    },
                    "value": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "uniqueItems": true
                    }
                },
                "title": "Name variant",
                "type": "object"
            },
            "title": "Name variants",
            "type": "array",
            "uniqueItems": true
        },
        "non_public_notes": {
            "items": {
                "title": "Non-Public note",
                "type": "string"
            },
            "title": "FIXME: Difference between hidden note?",
            "type": "array",
            "uniqueItems": true
        },
        "public_notes": {
            "items": {
                "title": "Public note",
                "type": "string"
            },
            "title": "Public notes",
            "type": "array",
            "uniqueItems": true
        },
        "related_institutes": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "curated_relation": {
                        "title": "Is the relation curated?",
                        "type": "boolean"
                    },
                    "name": {
                        "title": "Name of related institute",
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json",
                        "title": "URI for the related institute record"
                    },
                    "relation_type": {
                        "enum": [
                            "predecessor",
                            "successor",
                            "parent",
                            "superseded",
                            "other"
                        ],
                        "title": "Relation type",
                        "type": "string"
                    }
                },
                "title": "Related institute",
                "type": "object"
            },
            "title": "Related institutes",
            "type": "array",
            "uniqueItems": true
        },
        "self": {
            "$ref": "elements/json_reference.json",
            "description": "Url of the record itself",
            "title": "Url of the record"
        },
        "time_zone": {
            "description": "FIXME: we can populate this programmatically with Google APIs",
            "enum": [
                "there",
                "must",
                "be",
                "one"
            ],
            "title": "Time zone",
            "type": "string"
        },
        "urls": {
            "items": {
                "$ref": "elements/url.json"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "title": "Institution",
    "type": "object"
}
