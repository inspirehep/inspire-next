{
    "description": "An article or thesis or book or...",
    "title": "Publication",
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "funding_info": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "grant_number": {
                        "type": "string",
                        "title": "Grant number"
                    },
                    "agency": {
                        "type": "string",
                        "title": "Agency"
                    },
                    "project_number": {
                        "type": "string",
                        "title": "Project number"
                    }
                },
                "title": "Grant information"
            },
            "type": "array",
            "description": "Information related to funding. FIXME: Do we care about this? So far only 349 records were tagged and all for a single EU project.",
            "title": "Funding information"
        },
        "isbns": {
            "uniqueItems": true,
            "items": {
                "required": [
                    "value"
                ],
                "type": "object",
                "properties": {
                    "medium": {
                        "enum": [
                            "Print",
                            "print",
                            "Online",
                            "online",
                            "ebook",
                            "hardcover",
                            "paperback",
                            "eBook"
                        ],
                        "type": "string",
                        "description": "FIXME: this really need to be an enum and cleaned up. What is Print?!",
                        "title": "Medium"
                    },
                    "value": {
                        "title": "code",
                        "type": "string",
                        "format": "isbn"
                    }
                },
                "title": "ISBN code"
            },
            "type": "array",
            "description": "ISBN codes identifying the given book",
            "title": "ISBN codes"
        },
        "report_numbers": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "public_notes": {
            "uniqueItems": true,
            "items": {
                "required": [
                    "value"
                ],
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "abstracts": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "enum": [
                            "arXiv",
                            "AIP",
                            "APS",
                            "Annual Reviews",
                            "Astronomical Society of the Pacific",
                            "Author",
                            "Bulgarian Academy of Sciences",
                            "CERN",
                            "CERN/SLAC",
                            "Cambridge University Press",
                            "Canadian Center of Science and Education",
                            "DESY",
                            "DESY/SLAC",
                            "EDP Sciences",
                            "ELSEVIER",
                            "Education and Upbringing",
                            "Elsevier",
                            "European Astronomical Society",
                            "HEPDATA",
                            "HINDAWI",
                            "IEEE",
                            "INDICO",
                            "INSPIRE",
                            "IOP",
                            "IOS Press",
                            "IPAP",
                            "Indian National Science Academy",
                            "International Press",
                            "International Society for Optics and Photonics",
                            "Internet Academy",
                            "JACoW",
                            "Kharkov Institute of Physics and Technology",
                            "MDPI",
                            "MPI Grav. Phys., Potsdam",
                            "NRC Research Press",
                            "National Academy of Sciences of Armenia",
                            "Niscair",
                            "Oxford Journals",
                            "Oxford University Press",
                            "Physical Society of Japan",
                            "Polish Physical Society",
                            "Publisher",
                            "Royal Society",
                            "SIGMA",
                            "Springer",
                            "Tomsk State Pedagogical University",
                            "T\u00dcB\u0130TAK",
                            "WILEY",
                            "WS",
                            "WSP",
                            "World Scientific"
                        ],
                        "type": "string",
                        "description": "FIXME: is there an enumerable list of sources?"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "spires_sysnos": {
            "uniqueItems": true,
            "items": {
                "type": "string"
            },
            "type": "array",
            "description": "List of associated legacy SPIRES IDs"
        },
        "earliest_date": {
            "type": "string",
            "format": "date",
            "description": "The earliest date of this record among all types of dates"
        },
        "breadcrumb_title": {
            "type": "string",
            "description": "The title shown in all page breadcrumbs"
        },
        "preprint_date": {
            "type": "string",
            "format": "date"
        },
        "imprints": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "publisher": {
                        "type": "string",
                        "description": "FIXME: an enum?"
                    },
                    "place": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "titles": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "subtitle": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "titles_old": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "subtitle": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    }
                }
            },
            "type": "array",
            "description": "FIXME: Old 247, shall it still have its own field?"
        },
        "edition": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "edition": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "thesis_supervisor": {
            "uniqueItems": true,
            "items": {
                "required": [
                    "full_name"
                ],
                "type": "object",
                "properties": {
                    "affiliation": {
                        "type": "string"
                    },
                    "full_name": {
                        "type": "string"
                    },
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "record": {
                        "$ref": "json_reference.json"
                    }
                }
            },
            "type": "array"
        },
        "thesis": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "defense_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "university": {
                        "type": "string",
                        "description": "FIXME: shall we match these with the insitution database? I guess so."
                    },
                    "degree_type": {
                        "enum": [
                            "PhD",
                            "Master",
                            "Bachelor",
                            "Diploma",
                            "Habilitation",
                            "Laurea",
                            "Thesis"
                        ],
                        "type": "string",
                        "description": "FIXME: this enum must be reviewed"
                    },
                    "record": {
                        "description": "URI of the matched insitution record.",
                        "$ref": "json_reference.json"
                    }
                }
            },
            "type": "array"
        },
        "hidden_notes": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "enum": [
                            "SPIRES-HIDDEN",
                            "CERN",
                            "submitter"
                        ],
                        "type": "string",
                        "description": "FIXME: What's the semantic of this source?"
                    },
                    "cern_reference": {
                        "type": "string",
                        "description": "FIXME: Do we know what this is? do we care?"
                    },
                    "value": {
                        "type": "string"
                    },
                    "cds": {
                        "type": "string"
                    }
                }
            },
            "type": "array",
            "description": "FIXME: what about 595__d??"
        },
        "publication_info": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "journal_title": {
                        "type": "string"
                    },
                    "pubinfo_freetext": {
                        "type": "string"
                    },
                    "journal_volume": {
                        "type": "string"
                    },
                    "cnum": {
                        "type": "array"
                    },
                    "note": {
                        "type": "string"
                    },
                    "parent_record": {
                        "$ref": "json_reference.json",
                        "description": "URI for the parent this record is part of"
                    },
                    "journal_record": {
                        "$ref": "json_reference.json",
                        "description": "URI for corresponding Journal"
                    },
                    "conference_record": {
                        "$ref": "json_reference.json",
                        "description": "URI for corresponding Conference"
                    },
                    "reportnumber": {
                        "type": "string"
                    },
                    "year": {
                        "minimum": 1000,
                        "type": "integer",
                        "maximum": 2050
                    },
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "journal_issue": {
                        "type": "string"
                    },
                    "page_artid": {
                        "type": "string",
                        "description": "FIXME: for ejournals this could be the page index, but there is no realiable way to know whether something is a page index or a first page, does it?"
                    },
                    "conf_acronym": {
                        "type": "string"
                    },
                    "confpaper_info": {
                        "type": "string"
                    },
                    "isbn": {
                        "type": "string"
                    }
                }
            },
            "type": "array",
            "description": "FIXME: Shall we split conference information away? FIXME: shall we move the DOI and ISBN next to where it belongs? So that we can also align erratum and friends?"
        },
        "references": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "publisher": {
                        "type": "array"
                    },
                    "doi": {
                        "pattern": "(10\\.\\d+(\\.\\d+)?/.+)|(\\w+\\:\\d+\\/\\d+)",
                        "type": "string"
                    },
                    "isbn": {
                        "type": "string",
                        "format": "isbn"
                    },
                    "texkey": {
                        "type": "string"
                    },
                    "report_number": {
                        "type": "array"
                    },
                    "url": {
                        "type": "array",
                        "format": "url"
                    },
                    "collaboration": {
                        "type": "array"
                    },
                    "title": {
                        "type": "array"
                    },
                    "misc": {
                        "type": "array"
                    },
                    "editors": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "number": {
                        "type": "integer"
                    },
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "maintitle": {
                        "type": "string"
                    },
                    "raw_reference": {
                        "type": "array"
                    },
                    "year": {
                        "type": "integer"
                    },
                    "authors": {
                        "type": "array"
                    },
                    "journal_pubnote": {
                        "pattern": ".*,.*,.*",
                        "type": "array"
                    },
                    "record": {
                        "$ref": "json_reference.json"
                    }
                }
            },
            "type": "array"
        },
        "copyright": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "url"
                },
                "material": {
                    "enum": [
                        "Article"
                    ],
                    "type": "string"
                },
                "holder": {
                    "enum": [
                        "American Physical Society",
                        "World Scientific Publishing Company",
                        "authors",
                        "CERN"
                    ],
                    "type": "string",
                    "description": "Copyright holder. FIXME: should we restrict this to an enum, or not?"
                },
                "statement": {
                    "type": "string",
                    "description": "FIXME: What's that? there are all sorts of usages on production!"
                }
            },
            "type": "array"
        },
        "subject_terms": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "enum": [
                            "automatically added based on DCC, PPF, DK",
                            "submitter",
                            "INSPIRE"
                        ],
                        "type": "string"
                    },
                    "term": {
                        "type": "string"
                    },
                    "scheme": {
                        "enum": [
                            "INSPIRE",
                            "arXiv",
                            "APS",
                            "PoS",
                            "Elsevier"
                        ],
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "thesaurus_terms": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "classification_scheme": {
                        "enum": [
                            "INSPIRE",
                            "JACoW"
                        ],
                        "type": "string"
                    },
                    "keyword": {
                        "type": "string"
                    },
                    "energy_range": {
                        "minimum": 0,
                        "type": "integer",
                        "description": "FIXME: What... is... that!?",
                        "maximum": 9
                    }
                }
            },
            "type": "array"
        },
        "accelerator_experiments": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "curated_relation": {
                        "default": false,
                        "type": "boolean",
                        "description": "Was the experiment actually proofchecked by a cataloguer?"
                    },
                    "experiment": {
                        "type": "string"
                    },
                    "facets_experiment": {
                        "type": "string",
                        "description": "Experiment name to be used on facets."
                    },
                    "accelerator": {
                        "type": "string"
                    },
                    "institution": {
                        "type": "string"
                    },
                    "record": {
                        "description": "URI for the corresponding experiment record.",
                        "$ref": "json_reference.json"
                    }
                }
            },
            "type": "array"
        },
        "arxiv_eprints": {
            "uniqueItems": true,
            "items": {
                "properties": {
                    "value": {
                        "type": "string",
                        "pattern": "\\d{4}.\\d{4,5}|\\w+-\\w+/\\d+|\\w+/\\d+"
                    },
                    "categories": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array"
                    }
                }
            },
            "type": "array"
        },
        "title_variation": {
            "uniqueItems": true,
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "free_keywords": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "type": "array"
        },
        "core": {
            "type": "boolean",
            "description": "Whether this document is CORE and hence need special curation. NOTE: set this explicitly to false, in order to have real noncore."
        },
        "book_series": {
            "type": "object",
            "properties": {
                "volume": {
                    "type": "string",
                    "description": "Specific volume number"
                },
                "title": {
                    "type": "string",
                    "description": "Title of the book series"
                }
            },
            "type": "array"
        },
        "refextract": {
            "items": {
                "type": "object",
                "properties": {
                    "comment": {
                        "type": "string"
                    },
                    "time": {
                        "type": "string"
                    },
                    "version": {
                        "type": "array"
                    },
                    "source": {
                        "type": "string"
                    }
                }
            },
            "description": "Technical information from a refextract run",
            "type": "array"
        },
        "oai_pmh": {
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "previous_set": {
                        "type": "string"
                    }
                },
                "description": "Local OAI-PMH information"
            },
            "type": "array"
        },
        "succeeding_entry": {
            "items": {
            "type": "object",
                "properties": {
                    "relationship_code": {
                        "type": "string"
                    },
                    "isbn": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "json_reference.json"
                    }
                },
                "description": "Reference to previously merged records."
            }
        },
        "acquisition_source": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string",
                    "description": "Source of acquisition"
                },
                "email": {
                    "type": "string",
                    "description": "Email of acquisition contact"
                },
                "method": {
                    "type": "string",
                    "description": "Method of acquisition"
                },
                "date": {
                    "type": "string",
                    "description": "Date of acquisition"
                },
                "submission_number": {
                    "type": "string",
                    "description": "Special submission ID"
                }
            },
            "type": "array"
        },
        "collaboration": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "json_reference.json"
                    }
                }
            },
            "type": "array"
        },
        "authors": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "other_ids": {
                        "items": {
                            "type": "object",
                            "properties": {
                                "source": {
                                    "type": "string",
                                    "title": "Source of ID"
                                },
                                "value": {
                                    "type": "string",
                                    "title": "ID"
                                }
                            },
                            "title": "ID"
                        },
                        "type": "array",
                        "description": "Just in case...",
                        "title": "Other IDs"
                    },
                    "uuid": {
                        "title": "UUID",
                        "description": "Universally unique identifier of the author.",
                        "type": "string",
                        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                    },
                    "full_name": {
                        "title": "Author name",
                        "type": "string",
                        "description": "author name as it appears in the paper",
                        "format": ".+, .+"
                    },
                    "alternative_name": {
                        "title": "Alternative author name",
                        "type": "string",
                        "description": "FIXME: needed for import only",
                        "format": ".+, .+"
                    },
                    "name_variations": {
                        "title": "Author name variations",
                        "type": "string",
                        "description": "All possible variations of the authors full name."
                    },
                    "affiliations": {
                        "uniqueItems": true,
                        "items": {
                            "type": "object",
                            "properties": {
                                "curated_relation": {
                                    "type": "boolean",
                                    "description": "Did a cataloguer proof-checked the recid?",
                                    "title": "The affiliation is curated?"
                                },
                                "value": {
                                    "type": "string",
                                    "description": "The affiliation as it appears on the paper",
                                    "title": "Name of institution"
                                },
                                "record": {
                                    "description": "URI for the Institution collection record",
                                    "title": "URI for the Institution collection record",
                                    "$ref": "json_reference.json"
                                }
                            },
                            "title": "Affiliation"
                        },
                        "type": "array",
                        "title": "Affiliations"
                    },
                    "inspire_id": {
                        "pattern": "INSPIRE-\\d+",
                        "type": "string",
                        "description": "Legacy INSPIRE ID when available",
                        "title": "INSPIRE ID"
                    },
                    "inspire_bai": {
                        "pattern": "(\\w+\\.)+\\d+",
                        "type": "string",
                        "description": "INSPIRE BAI when available",
                        "title": "INSPIRE BibAuthorID"
                    },
                    "curated_relation": {
                        "default": false,
                        "type": "boolean",
                        "description": "Was this signature actually claimed or proof-checked by cataloguer?",
                        "title": "The relation is curated?"
                    },
                    "orcid": {
                        "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{4}",
                        "title": "ORCID ID",
                        "type": "string",
                        "description": "ORCID Id when available",
                        "format": "orcid"
                    },
                    "role": {
                        "enum": [
                            "",
                            "ed.",
                            "Technical Associate"
                        ],
                        "type": "string",
                        "description": "Role of the author within the paper. So far only Editor was captured.",
                        "title": "Role of the person"
                    },
                    "email": {
                        "title": "Email",
                        "type": "string",
                        "format": "email"
                    },
                    "profile": {
                        "title": "Profile URL",
                        "description": "Link to the author's profile.",
                        "type": "object",
                        "properties": {
                            "__url__": {
                                "type": "string",
                                "format": "url"
                            }
                        }
                    },
                    "signature_block": {
                        "title": "Phonetic name",
                        "description": "Phonetic notation of the author's name.",
                        "type": "string"
                    },
                    "record": {
                        "description": "URI for the person record",
                        "title": "URI for the person record",
                        "$ref": "json_reference.json"
                    }
                },
                "title": "Author"
            },
            "type": "array",
            "description": "List with all the authors",
            "title": "Authors"
        },
        "classification_number": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "string",
                        "description": "PACS or PDG codes. FIXME: What about better separating these into a PACS field and a PDG field?",
                        "title": "Number"
                    },
                    "standard": {
                        "enum": [
                            "PACS",
                            "PDG"
                        ],
                        "type": "string",
                        "title": "Standard"
                    },
                    "source": {
                        "type": "string",
                        "title": "Source"
                    }
                },
                "title": "Classification number"
            },
            "type": "array",
            "title": "Classification numbers"
        },
        "dois": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "Issuing of DOI. FIXME: should we have an enum",
                        "title": "DOI registrant"
                    },
                    "value": {
                        "pattern": "10\\.\\d+(\\.\\d+)?/.+",
                        "type": "string",
                        "title": "DOI"
                    }
                },
                "title": "DOI"
            },
            "type": "array",
            "title": "DOIs"
        },
        "document_type": {
            "minItems": 1,
            "items": {
                "enum": [
                    "Published",
                    "arXiv",
                    "ConferencePaper",
                    "Thesis",
                    "Review",
                    "Lectures",
                    "Note",
                    "Proceedings",
                    "Introductory",
                    "Book",
                    "BookChapter",
                    "Report"
                ],
                "type": "string"
            },
            "uniqueItems": true,
            "type": "array",
            "title": "Document type"
        },
        "collections": {
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "primary": {
                        "type": "string"
                    }
                }
            },
            "uniqueItems": true,
            "type": "array",
            "title": "Collection"
        },
        "citeable": {
            "type": "boolean",
            "description": "Whether this document can be cited. FIXME: can this be derived from other properties?",
            "title": "Citeable?"
        },
