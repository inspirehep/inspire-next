{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "address": {
            "items": {
                "$ref": "elements/address.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "closed_date": {
            "format": "date",
            "title": "Date when the job was closed",
            "type": "string"
        },
        "contact_details": {
            "items": {
                "$ref": "elements/contact.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "continent": {
            "enum": [
                "Africa",
                "Antarctica",
                "Asia",
                "Europe",
                "North America",
                "Oceania",
                "South America"
            ],
            "type": "string"
        },
        "deadline_date": {
            "format": "date",
            "title": "Application deadline",
            "type": "string"
        },
        "description": {
            "title": "Job description",
            "type": "string"
        },
        "experiments": {
            "items": {
                "description": "FIXME: we can simply store here the ID of the experiment.",
                "title": "Experiment associated with Job",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "field_categories": {
            "items": {
                "$ref": "elements/field.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "institution": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "name": {
                        "title": "Institution name",
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json",
                        "title": "Institution Record URI"
                    }
                },
                "title": "Institution",
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "position": {
            "title": "Job position",
            "type": "string"
        },
        "ranks": {
            "items": {
                "$ref": "elements/rank.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "reference_email": {
            "items": {
                "description": "FIXME: what is the difference from contact_email!?",
                "format": "email",
                "title": "Reference email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "self": {
            "$ref": "elements/json_reference.json",
            "description": "Url of the record itself",
            "title": "Url of the record"
        },
        "urls": {
            "items": {
                "$ref": "elements/url.json"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "title": "HEP Job",
    "type": "object"
}
