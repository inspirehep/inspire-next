{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "closed_date": {
            "format": "date",
            "title": "Date when the job was closed",
            "type": "string"
        },
        "contact_details": {
            "items": {
                "$ref": "elements/contact.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "continent": {
            "items": {
                "enum": [
                    "North America",
                    "Europe",
                    "Asia",
                    "South America",
                    "Africa",
                    "Oceania"
                ],
                "title": "Continent",
                "type": "string"
            },
            "title": "Continent",
            "type": "array",
            "uniqueItems": true
        },
        "deadline_date": {
            "format": "date",
            "title": "Application deadline",
            "type": "string"
        },
        "experiments": {
            "items": {
                "description": "FIXME: we can simply store here the ID of the experiment.",
                "title": "Experiment associated with Job",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "institution": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "name": {
                        "title": "Institution name",
                        "type": "string"
                    },
                    "record": {
                        "title": "Institution Record URI",
                        "$ref": "json_reference.json"
                    }
                },
                "title": "Institution",
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "description": {
            "title": "Job description",
            "type": "string"
        },
        "position": {
            "title": "Job position",
            "type": "string"
        },
        "_ranks": {
          "items": {
              "title": "Raw values of MARC 656__a field",
              "type": "string"
          },
          "type": "array",
          "uniqueItems": true
        },
        "ranks": {
          "items": {
              "$ref": "elements/rank.json"
          },
          "type": "array",
          "uniqueItems": true
        },
        "reference_email": {
            "items": {
                "description": "E-mail address where applications should be sent (if different than contact e-mail)",
                "format": "email",
                "title": "Reference email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "research_area": {
            "items": {
                "enum": [
                    "usual",
                    "arXiv",
                    "list",
                    "physics.ins-det",
                    "astro-ph",
                    "nucl-th",
                    "hep-lat",
                    "physics",
                    "hep-th",
                    "hep-ex",
                    "gr-qc",
                    "hep-ph",
                    "physics.acc-phys",
                    "nucl-ex",
                    "physics-other"
                ],
                "type": "string"
            },
            "title": "Research area",
            "type": "array",
            "uniqueItems": true
        },
        "urls": {"$ref": "elements/urls.json"}
    },
    "title": "HEP Job",
    "type": "object"
}
