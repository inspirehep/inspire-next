{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "closed_date": {
            "format": "date",
            "title": "Date when the job was closed",
            "type": "string"
        },
        "contact_email": {
            "items": {
                "format": "email",
                "title": "Contact email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "contact_person": {
            "items": {
                "title": "Contact person",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "continent": {
            "items": {
                "enum": [
                    "North America",
                    "Europe",
                    "Asia",
                    "South America",
                    "Africa",
                    "Oceania"
                ],
                "title": "Continent",
                "type": "string"
            },
            "title": "Continent",
            "type": "array",
            "uniqueItems": true
        },
        "deadline_date": {
            "format": "date",
            "title": "Application deadline",
            "type": "string"
        },
        "experiments": {
            "items": {
                "description": "FIXME: we can simply store here the ID of the experiment.",
                "title": "Experiment associated with Job",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "institution": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "name": {
                        "title": "Institution name",
                        "type": "string"
                    },
                    "record": {
                        "title": "Institution Record URI",
                        "$ref": "json_reference.json"
                    }
                },
                "title": "Institution",
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "description": {
            "title": "Job description",
            "type": "string"
        },
        "position": {
            "title": "Job position",
            "type": "string"
        },
        "rank": {
            "items": {
                "description": "FIXME: should this be identical to hepnames rank? I would say so",
                "enum": [
                    "Postdc",
                    "Postdoc",
                    "Junior",
                    "Student",
                    "Senior",
                    "Staff",
                    "Visitor",
                    "Visiting Scientist"
                ],
                "title": "Rank",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "reference_email": {
            "items": {
                "description": "FIXME: what is the difference from contact_email!?",
                "format": "email",
                "title": "Reference email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "research_area": {
            "items": {
                "enum": [
                    "usual",
                    "arXiv",
                    "list",
                    "physics.ins-det",
                    "astro-ph",
                    "nucl-th",
                    "hep-lat",
                    "physics",
                    "hep-th",
                    "hep-ex",
                    "gr-qc",
                    "hep-ph",
                    "physics.acc-phys",
                    "nucl-ex",
                    "physics-other"
                ],
                "type": "string"
            },
            "title": "Research area",
            "type": "array",
            "uniqueItems": true
        },
        "urls": {
            "uniqueItems": true,
            "items": {
                "type": "string",
                "format": "url"
            },
            "type": "array",
            "description": "Contains links."
        }
    },
    "title": "HEP Job",
    "type": "object"
}
