{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "coden": {
            "items": {
                "pattern": "\\w{5,6}",
                "title": "CODEN",
                "type": "string"
            },
            "title": "CODEN",
            "type": "array",
            "uniqueItems": true
        },
        "short_titles": {
            "$ref": "elements/titles.json"
        },
        "issn": {
            "uniqueItems": true,
            "items": {
                "required": [
                    "value"
                ],
                "type": "object",
                "properties": {
                    "medium": {
                        "enum": [
                            "online",
                            "print"
                        ],
                        "title": "Medium",
                        "type": "string",
                        "description": "Medium (type) of the ISSN."
                    },
                    "value": {
                        "title": "ISSN",
                        "pattern": "\\d{4}-\\d{3}[\\dX]",
                        "type": "string"
                    },
                    "comment": {
                        "title": "comment",
                        "type": "string",
                        "description": "Type might be specified here, e.g. hardcover, ebook"
                    }
                },
                "title": "ISSN code"
            },
            "title": "ISSN codes",
            "type": "array",
            "description": "ISSN codes identifying the given journal"
        },
        "journal_handling": {
            "title": "Journal handling",
            "type": "string"
        },
        "titles": {
            "$ref": "elements/titles.json"
        },
        "license": {
            "enum": [
                "probably",
                "it",
                "is",
                "needed"
            ],
            "title": "License",
            "type": "string"
        },
        "license_urls": {
            "$ref": "elements/urls.json"
        },
        "nonpublic_note": {
            "title": "Non public note",
            "type": "string"
        },
        "peer_reviewed": {
            "title": "Is the journal peer-reviewed?",
            "type": "boolean"
        },
        "public_note": {
            "title": "Publisher",
            "type": "string"
        },
        "publisher": {
            "title": "Publisher",
            "type": "array"
        },
        "relation": {
            "properties": {
                "curated_relation": {
                    "title": "Is the relation curated?",
                    "type": "boolean"
                },
                "issn": {
                    "pattern": "\\d{4}-\\d{3}[\\dX]",
                    "title": "ISSN of the related record",
                    "type": "string"
                },
                "relation": {
                    "description": "FIXME: as usual, shall we capture only superseeded records and derive the symmetric relation automatically?",
                    "enum": [
                        "superseded record",
                        "superseeding record"
                    ],
                    "title": "Type of relation",
                    "type": "string"
                },
                "record": {
                    "title": "URI for the related record",
                    "$ref": "json_reference.json"
                }
            },
            "required": [
                "relation",
                "issn"
            ],
            "title": "Relation",
            "type": "object"
        },
        "title_variants": {
            "$ref": "elements/titles.json"
        },
        "urls": {
            "$ref": "elements/urls.json"
        }
    },
    "title": "Journal",
    "type": "object"
}
