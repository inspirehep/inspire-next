{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "advisors": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "degree_type": {
                        "enum": [
                            "PhD",
                            "Master",
                            "Bachelor",
                            "Other"
                        ],
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "author_note": {
            "description": "Contains public note.",
            "type": "string"
        },
        "birth_date": {
            "description": "Stores birth date",
            "format": "date",
            "type": "string"
        },
        "conferences": {
            "description": "Contains information about attended conferences. (their record URIs)",
            "items": {
                "$ref": "elements/json_reference.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "death_date": {
            "description": "Stores death date (if any)",
            "format": "date",
            "type": "string"
        },
        "email_addresses": {
            "description": "Contains current email addresses",
            "items": {
                "format": "email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "experiments": {
            "description": "Contains information about experiments.",
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "current": {
                        "type": "boolean"
                    },
                    "end_year": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json",
                        "description": "URI for the experiment record"
                    },
                    "start_year": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "field_categories": {
            "items": {
                "$ref": "elements/field.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "ids": {
            "items": {
                "$ref": "elements/id.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "name": {
            "description": "Contains name information.",
            "properties": {
                "numeration": {
                    "enum": [
                        "",
                        "Jr.",
                        "Sr.",
                        "I",
                        "II",
                        "III",
                        "IV",
                        "VI",
                        "VII",
                        "VIII"
                    ],
                    "type": "string"
                },
                "preferred_name": {
                    "type": "string"
                },
                "title": {
                    "enum": [
                        "",
                        "Sir",
                        "Mrs."
                    ],
                    "type": "string"
                },
                "value": {
                    "format": ".+, .+",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "native_name": {
            "description": "Stores name in native form.",
            "type": "array"
        },
        "other_names": {
            "description": "Contains other variation of names. Usually a different form of writing the primary name.",
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "past_emails_addresses": {
            "description": "Contains past email addresses",
            "items": {
                "format": "email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "positions": {
            "items": {
                "properties": {
                    "current": {
                        "type": "boolean"
                    },
                    "emails": {
                        "items": {
                            "format": "email",
                            "type": "string"
                        },
                        "type": "array"
                    },
                    "end_date": {
                        "format": "date",
                        "type": "string"
                    },
                    "institution": {
                        "properties": {
                            "curated_relation": {
                                "type": "boolean"
                            },
                            "name": {
                                "type": "string"
                            },
                            "record": {
                                "$ref": "elements/json_reference.json"
                            }
                        },
                        "type": "object"
                    },
                    "rank": {
                        "$ref": "elements/rank.json"
                    },
                    "start_date": {
                        "format": "date",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "previous_names": {
            "description": "Contains a previous name. For example, it can be a maiden's name.",
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "prizes": {
            "description": "Contains prize name.t",
            "items": {
                "description": "E.g. Nobel Prize Physics 1977, Shaw Prize 2006, Sakurai Prize 1985 FIXME: shall we separate the year?",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "self": {
            "$ref": "elements/json_reference.json",
            "description": "Url of the record itself",
            "title": "Url of the record"
        },
        "source": {
            "description": "This is the source of informatio. It is currently a mixed bags of user IDs or provenance information, e.g. arXiv etc. FIXME: we should really discuss about it. E.g. eprint, webform, Rachel.Lumpkin@durham.ac.uk(96), Fermilab, C09-05-04, KYOTOU...",
            "items": {
                "date_verified": {
                    "format": "date",
                    "type": "string"
                },
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "status": {
            "description": "The person's status",
            "enum": [
                "active",
                "deceased",
                "departed",
                "retired"
            ],
            "type": "string"
        },
        "urls": {
            "items": {
                "$ref": "elements/url.json"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "name"
    ],
    "type": "object"
}
