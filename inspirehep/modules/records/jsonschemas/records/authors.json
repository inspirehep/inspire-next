{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "advisors": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "degree_type": {
                        "enum": [
                            "PhD",
                            "Master",
                            "Bachelor",
                            "Other"
                        ],
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "author_note": {
            "type": "string"
        },
        "birth_date": {
            "format": "date",
            "type": "string"
        },
        "conferences": {
            "items": {
                "$ref": "elements/json_reference.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "death_date": {
            "format": "date",
            "type": "string"
        },
        "email_addresses": {
            "items": {
                "format": "email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "experiments": {
            "items": {
                "properties": {
                    "curated_relation": {
                        "type": "boolean"
                    },
                    "current": {
                        "type": "boolean"
                    },
                    "end_year": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "record": {
                        "$ref": "elements/json_reference.json"
                    },
                    "start_year": {
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "field_categories": {
            "items": {
                "$ref": "elements/field.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "ids": {
            "items": {
                "$ref": "elements/id.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "name": {
            "properties": {
                "numeration": {
                    "enum": [
                        "",
                        "Jr.",
                        "Sr.",
                        "I",
                        "II",
                        "III",
                        "IV",
                        "VI",
                        "VII",
                        "VIII"
                    ],
                    "type": "string"
                },
                "preferred_name": {
                    "type": "string"
                },
                "title": {
                    "enum": [
                        "",
                        "Sir"
                    ],
                    "type": "string"
                },
                "value": {
                    "format": ".+, .+",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "native_name": {
            "type": "array"
        },
        "other_names": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "past_emails_addresses": {
            "items": {
                "format": "email",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "positions": {
            "items": {
                "properties": {
                    "current": {
                        "type": "boolean"
                    },
                    "email": {
                        "format": "email",
                        "type": "string"
                    },
                    "end_date": {
                        "format": "date",
                        "type": "string"
                    },
                    "institution": {
                        "properties": {
                            "curated_relation": {
                                "type": "boolean"
                            },
                            "name": {
                                "type": "string"
                            },
                            "record": {
                                "$ref": "elements/json_reference.json"
                            }
                        },
                        "type": "object"
                    },
                    "old_email": {
                        "format": "email",
                        "type": "string"
                    },
                    "rank": {
                        "$ref": "elements/rank.json"
                    },
                    "start_date": {
                        "format": "date",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "previous_names": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "prizes": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "self": {
            "$ref": "elements/json_reference.json"
        },
        "source": {
            "items": {
                "date_verified": {
                    "format": "date",
                    "type": "string"
                },
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array",
            "uniqueItems": true
        },
        "status": {
            "enum": [
                "active",
                "deceased",
                "departed",
                "retired"
            ],
            "type": "string"
        },
        "urls": {
            "items": {
                "$ref": "elements/url.json"
            },
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "name"
    ],
    "type": "object"
}
