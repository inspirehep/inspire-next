{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "self": {
          "description": "Url of the record itself",
          "title": "Url of the record",
          "$ref": "json_reference.json"
        },
        "acronym": {
            "title": "Conference acronym",
            "type": "array"
        },
        "address": {
          "items": {"$ref": "elements/address.json"},
          "title": "Address of the conference (usually there is only one)",
          "type": "array",
          "uniqueItems": true
        },
        "alternative_titles": {
            "titles": {
                "uniqueItems": true,
                "items": {
                    "type": "object",
                    "properties": {
                        "searchable_title": {
                            "type": "string"
                        },
                        "title": {
                            "type": "string"
                        }
                    },
                    "title": "Title (and searchable title 711__b)"
                },
                "type": "array"
            }
        },
        "closing_date": {
            "format": "date",
            "title": "Conference closing date",
            "type": "string"
        },
        "cnum": {
            "pattern": "C\\d\\d-\\d\\d(-\\d\\d)?(\\.\\d+)?",
            "title": "Conference ID (CNUM)",
            "type": "string"
        },
        "contact_details": {
            "items": {
                "$ref": "elements/contact.json"
            },
            "type": "array",
            "uniqueItems": true
        },
        "extra_place_info": {
            "items": {
              "title": "Extra place info",
              "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "field_code": {
            "items": {
                "description": "FIXME: shall we normalize this to the usual arXiv?",
                "properties": {
                        "value": {
                            "title": "Field code",
                            "type": "string"
                        },
                        "source": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
            "title": "Field codes",
            "type": "array",
            "uniqueItems": true
        },
        "keywords": {
            "properties": {
                "value": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                }
            },
            "title": "Free keywords",
            "type": "array",
            "uniqueItems": true
        },
        "nonpublic_note": {
            "title": "Non public note",
            "type": "string"
        },
        "note": {
            "title": "Note",
            "type": "array"
        },
        "opening_date": {
            "format": "date",
            "title": "Conference opening date",
            "type": "string"
        },
        "place": {
            "pattern": ".+,.+,?.*",
            "title": "Conference place",
            "type": "string"
        },
        "series": {
            "title": "Conference series",
            "type": "array"
        },
        "series_number": {
            "title": "Conference series number",
            "type": "integer"
        },
        "short_description": {
            "type": "object",
                "properties": {
                    "value": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    }
                },
                "type":"array",
                "title": "Short description"
        },
        "titles": {
            "$ref": "elements/titles.json"
        },
        "urls": {
            "$ref": "elements/urls.json"
        }
    },
    "title": "Conference",
    "type": "object"
}
