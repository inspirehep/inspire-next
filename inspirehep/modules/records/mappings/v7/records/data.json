{
  "mappings": {
    "date_detection": false,
    "numeric_detection": false,
    "properties": {
      "$schema": {
        "type": "keyword"
      },
      "_collections": {
        "normalizer": "lowercase_normalizer",
        "type": "keyword"
      },
      "citation_count": {
        "type": "integer"
      },
      "control_number": {
        "type": "integer"
      },
      "deleted": {
        "type": "boolean"
      },
      "deleted_recids": {
        "type": "integer"
      },
      "deleted_records": {
        "properties": {
          "$ref": {
            "type": "text",
            "analyzer": "recid_analyzer"
          }
        },
        "type": "object"
      },
      "dois": {
        "properties": {
          "material": {
            "type": "keyword"
          },
          "source": {
            "type": "keyword"
          },
          "value": {
            "fields": {
              "raw": {
                "analyzer": "lowercase_analyzer",
                "type": "text"
              }
            },
            "type": "text"
          }
        },
        "type": "object"
      },
      "new_recid": {
        "type": "integer"
      },
      "new_record": {
        "properties": {
          "$ref": {
            "type": "text",
            "analyzer": "recid_analyzer"
          }
        },
        "type": "object"
      },
      "self": {
        "properties": {
          "$ref": {
            "type": "text",
            "analyzer": "recid_analyzer"
          }
        },
        "type": "object"
      },
      "self_recid": {
        "type": "integer"
      }
    }
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "lowercase_analyzer": {
          "filter": "lowercase",
          "tokenizer": "keyword",
          "type": "custom"
        },
        "recid_analyzer": {
          "tokenizer": "recid_tokenizer"
        }
      },
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "char_filter": [],
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "recid_tokenizer": {
          "type": "pattern",
          "pattern": "(\\d+)",
          "group": 1
        }
      }
    }
  }
}
