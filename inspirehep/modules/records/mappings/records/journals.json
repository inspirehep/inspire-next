{
    "mappings": {
        "journals": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "analyzer": "lowercase_analyzer",
                    "type": "string"
                },
                "accelerator_experiment": {
                    "properties": {
                        "experiment": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "affautocomplete": {
                    "type": "string"
                },
                "authors": {
                    "properties": {
                        "affiliation": {
                            "type": "string"
                        },
                        "full_name": {
                            "analyzer": "natural_text",
                            "copy_to": [
                                "exactauthor"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "collaboration": {
                    "properties": {
                        "collaboration": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "date": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
                    "type": "date"
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "division": {
                    "type": "string"
                },
                "exactauthor": {
                    "fields": {
                        "raw": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "string"
                },
                "experiment_name": {
                    "copy_to": [
                        "experimentautocomplete"
                    ],
                    "type": "string"
                },
                "experimentautocomplete": {
                    "type": "string"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "hidden_note": {
                    "properties": {
                        "cds": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "institution": {
                    "properties": {
                        "affiliation": {
                            "copy_to": [
                                "affautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "issn": {
                    "properties": {
                        "material": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "value": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "journalautocomplete": {
                    "type": "string"
                },
                "publication_info": {
                    "properties": {
                        "journal_volume": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "year": {
                            "format": "yyyy",
                            "type": "date"
                        }
                    },
                    "type": "object"
                },
                "publisher": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "report_number": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "short_titles": {
                    "properties": {
                        "title": {
                            "copy_to": [
                                "journalautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "journal_titles": {
                    "properties": {
                        "title": {
                            "copy_to": [
                                "journalautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "title_variants": {
                    "properties": {
                      "title": {
                        "type": "string",
                        "fields": {
                          "lowercased": {
                            "type": "string",
                            "analyzer": "lowercase_analyzer"
                          }
                        }
                      }
                    }
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "lowercase_analyzer": {
                    "filter": "lowercase",
                    "tokenizer": "keyword"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
