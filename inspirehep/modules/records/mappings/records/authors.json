{
    "mappings": {
        "authors": {
            "_all": {
                "enabled": false
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "authorautocomplete": {
                    "type": "string"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "date": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
                    "type": "date"
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "exactauthor": {
                    "fields": {
                        "raw": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "string"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "name": {
                    "properties": {
                        "value": {
                            "copy_to": [
                                "authorautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "experiments": {
                    "properties": {
                        "name": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "positions": {
                    "include_in_parent": true,
                    "type": "nested"
                },
                "self": {
                    "properties": {
                        "$ref": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "urls": {
                    "properties": {
                        "value": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
