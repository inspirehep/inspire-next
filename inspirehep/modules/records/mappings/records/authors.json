{
    "mappings": {
        "authors": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "analyzer": "lowercase_analyzer",
                    "type": "string"
                },
                "authorautocomplete": {
                    "type": "string"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "date": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
                    "type": "date"
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "exactauthor": {
                    "fields": {
                        "raw": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "string"
                },
                "experiments": {
                    "properties": {
                        "name": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "name": {
                    "properties": {
                        "value": {
                          "type": "string",
                          "analyzer": "authors_full_name_analyzer",
                          "copy_to": "authorautocomplete"
                        },
                        "name_variations": {
                          "type": "string",
                          "analyzer": "no_tokenizing_analyzer"
                        }
                    },
                    "type": "object"
                },
                "positions": {
                    "include_in_parent": true,
                    "type": "nested"
                },
                "self": {
                    "properties": {
                        "$ref": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "urls": {
                    "properties": {
                        "value": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "icu_tokenizer",
                    "type": "custom"
                },
                "lowercase_analyzer": {
                    "filter": "lowercase",
                    "tokenizer": "keyword"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "authors_full_name_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "apostrophes_remove",
                        "characters_remove"
                    ],
                    "tokenizer": "icu_tokenizer",
                    "type": "custom"
                },
                "no_tokenizing_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "apostrophes_remove",
                        "characters_remove",
                        "whitespace_remove",
                        "trim"
                    ],
                    "tokenizer": "keyword",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "icu_folding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                },
                "characters_remove": {
                    "pattern": ",|'|\\.|-|_",
                    "replacement": " ",
                    "type": "pattern_replace"
                },
                "apostrophes_remove": {
                    "pattern": "\u2018|\u2019|\u201c|\u201d|'|'|\"",
                    "replacement": "'",
                    "type": "pattern_replace"
                },
                "whitespace_remove": {
                    "pattern": "[ \t]{2,}",
                    "replacement": " ",
                    "type": "pattern_replace"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
