{
    "mappings": {
        "jobs": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "acquisition_source": {
                    "properties": {
                        "submission_number": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "closed_date": {
                    "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                    "type": "date"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "continent": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "deadline_date": {
                    "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                    "type": "date"
                },
                "experiment": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "institution": {
                    "properties": {
                        "name": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "rank": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "research_area": {
                    "index": "not_analyzed",
                    "type": "string"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
