{
    "mappings": {
        "conferences": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "acronym": {
                    "copy_to": [
                        "conferenceautocomplete"
                    ],
                    "type": "string"
                },
                "cnum": {
                    "copy_to": [
                        "conferenceautocomplete"
                    ],
                    "index": "not_analyzed",
                    "type": "string"
                },
                "conferenceautocomplete": {
                    "analyzer": "autocomplete_analyzer",
                    "type": "string"
                },
                "field_code": {
                    "properties": {
                        "value": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "opening_date": {
                    "copy_to": [
                        "conferenceautocomplete"
                    ],
                    "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                    "type": "date"
                },
                "place": {
                    "copy_to": [
                        "conferenceautocomplete"
                    ],
                    "type": "string"
                },
                "series": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "title": {
                    "copy_to": [
                        "conferenceautocomplete"
                    ],
                    "type": "string"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "autocomplete_analyzer": {
                    "filter": [
                        "lowercase",
                        "word_delimiter_orig"
                    ],
                    "tokenizer": "whitespace",
                    "type": "custom"
                },
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                },
                "word_delimiter_orig": {
                    "preserve_original": true,
                    "type": "word_delimiter"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
