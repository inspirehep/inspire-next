{
    "mappings": {
        "experiments": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "_collections": {
                    "analyzer": "lowercase_analyzer",
                    "type": "string"
                },
                "accelerator": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "accelerator_experiment": {
                    "properties": {
                        "experiment": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "affautocomplete": {
                    "type": "string"
                },
                "affiliation": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "authors": {
                    "properties": {
                        "affiliation": {
                            "type": "string"
                        },
                        "full_name": {
                            "analyzer": "natural_text",
                            "copy_to": [
                                "exactauthor"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "collaboration": {
                    "type": "string"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "date": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
                    "type": "date"
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "division": {
                    "type": "string"
                },
                "exactauthor": {
                    "fields": {
                        "raw": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "string"
                },
                "experiment_names": {
                    "properties": {
                        "title": {
                            "copy_to": [
                                "experimentautocomplete"
                            ],
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "experiment_suggest": {
                    "analyzer": "simple",
                    "payloads": true,
                    "search_analyzer": "simple",
                    "type": "completion"
                },
                "experimentautocomplete": {
                    "type": "string"
                },
                "field_code": {
                    "index": "not_analyzed",
                    "type": "string"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "hidden_note": {
                    "properties": {
                        "cds": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "institution": {
                    "properties": {
                        "affiliation": {
                            "copy_to": [
                                "affautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "publication_info": {
                    "properties": {
                        "journal_volume": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "year": {
                            "format": "yyyy",
                            "type": "date"
                        }
                    },
                    "type": "object"
                },
                "report_number": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "lowercase_analyzer": {
                    "filter": "lowercase",
                    "tokenizer": "keyword"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
