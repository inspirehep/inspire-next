{
    "mappings": {
        "institutions": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "default": {
                        "mapping": {
                            "analyzer": "basic_analyzer",
                            "copy_to": "global_default",
                            "type": "string"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "numeric_detection": false,
            "properties": {
                "ICN": {
                    "copy_to": [
                        "affautocomplete"
                    ],
                    "type": "string"
                },
                "_collections": {
                    "analyzer": "lowercase_analyzer",
                    "type": "string"
                },
                "address": {
                    "properties": {
                        "country": {
                            "fields": {
                                "raw": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                }
                            },
                            "type": "string"
                        }
                    }
                },
                "affautocomplete": {
                    "type": "string"
                },
                "collections": {
                    "properties": {
                        "primary": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "secondary": {
                            "index": "not_analyzed",
                            "type": "string"
                        }
                    }
                },
                "date_and_time_of_latest_transaction": {
                    "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
                    "type": "date"
                },
                "global_default": {
                    "analyzer": "basic_analyzer",
                    "type": "string"
                },
                "global_fulltext": {
                    "analyzer": "natural_text",
                    "type": "string"
                },
                "institution": {
                    "copy_to": [
                        "affautocomplete"
                    ],
                    "type": "string"
                },
                "name": {
                    "copy_to": [
                        "affautocomplete"
                    ],
                    "type": "string"
                },
                "name_variants": {
                    "properties": {
                        "value": {
                            "copy_to": [
                                "affautocomplete"
                            ],
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "basic_analyzer": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "lowercase_analyzer": {
                    "filter": "lowercase",
                    "tokenizer": "keyword"
                },
                "natural_text": {
                    "filter": [
                        "asciifold_with_orig",
                        "lowercase",
                        "synonyms_kbr"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                }
            },
            "filter": {
                "asciifold_with_orig": {
                    "preserve_original": true,
                    "type": "asciifolding"
                },
                "synonyms_kbr": {
                    "synonyms": [
                        "production => creation"
                    ],
                    "type": "synonym"
                }
            }
        },
        "index.percolator.map_unmapped_fields_as_string": true
    }
}
