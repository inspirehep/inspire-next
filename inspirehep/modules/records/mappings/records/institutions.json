{
    "mappings": {
        "institutions": {
            "_all": {
                "enabled": true
            },
            "date_detection": false,
            "numeric_detection": false,
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "ICN": {
                    "copy_to": "affautocomplete",
                    "type": "string"
                },
                "_collections": {
                    "analyzer": "lowercase_analyzer",
                    "type": "string"
                },
                "_private_notes": {
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "addresses": {
                    "properties": {
                        "cities": {
                            "type": "string"
                        },
                        "country_code": {
                            "type": "string"
                        },
                        "latitude": {
                            "type": "double"
                        },
                        "longitude": {
                            "type": "double"
                        },
                        "place_name": {
                            "type": "string"
                        },
                        "postal_address": {
                            "type": "string"
                        },
                        "postal_code": {
                            "type": "string"
                        },
                        "state": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "affautocomplete": {
                    "type": "string"
                },
                "affiliation_suggest": {
                    "payloads": true,
                    "type": "completion"
                },
                "control_number": {
                    "type": "integer"
                },
                "core": {
                    "type": "boolean"
                },
                "deleted": {
                    "type": "boolean"
                },
                "deleted_recids": {
                    "type": "integer"
                },
                "deleted_records": {
                    "properties": {
                        "$ref": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "external_system_identifiers": {
                    "properties": {
                        "schema": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "extra_words": {
                    "type": "string"
                },
                "historical_data": {
                    "type": "string"
                },
                "inactive": {
                    "type": "boolean"
                },
                "inspire_categories": {
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "term": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "institution_hierarchy": {
                    "properties": {
                        "acronym": {
                            "copy_to": "affautocomplete",
                            "type": "string"
                        },
                        "name": {
                            "copy_to": "affautocomplete",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "institution_type": {
                    "type": "string"
                },
                "legacy_ICN": {
                    "copy_to": "affautocomplete",
                    "type": "string"
                },
                "legacy_creation_date": {
                    "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                    "type": "date"
                },
                "name_variants": {
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "value": {
                            "copy_to": "affautocomplete",
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "new_recid": {
                    "type": "integer"
                },
                "new_record": {
                    "properties": {
                        "$ref": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "public_notes": {
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "related_records": {
                    "properties": {
                        "curated_relation": {
                            "type": "boolean"
                        },
                        "recid": {
                            "type": "integer"
                        },
                        "record": {
                            "properties": {
                                "$ref": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "relation": {
                            "type": "string"
                        },
                        "relation_freetext": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "self": {
                    "properties": {
                        "$ref": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "self_recid": {
                    "type": "integer"
                },
                "urls": {
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            }
        }
    },
    "settings": {
        "analysis": {
            "analyzer": {
                "lowercase_analyzer": {
                    "filter": "lowercase",
                    "tokenizer": "keyword",
                    "type": "custom"
                }
            }
        }
    }
}
