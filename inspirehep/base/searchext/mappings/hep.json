{
  "mappings": {
    "record": {
      "_all": {
        "enabled": false
      },
      "date_detection": false,
      "dynamic_templates": [
        {
          "default": {
            "mapping": {
              "analyzer": "basic_analyzer",
              "copy_to": "global_fulltext",
              "type": "string"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "numeric_detection": false,
      "properties": {
        "_collections": {
          "index": "not_analyzed",
          "type": "string"
        },
        "abstract": {
          "type": "string"
        },
        "abstracts": {
          "properties": {
            "value": {
              "copy_to": [
                "abstract",
                "global_fulltext"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "accelerator_experiments": {
          "properties": {
            "experiment": {
              "copy_to": [
                "experiment"
              ],
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "affautocomplete": {
          "type": "string"
        },
        "affiliation": {
          "type": "string"
        },
        "arXiv": {
          "type": "string"
        },
        "arxiv_eprints": {
          "properties": {
            "categories": {
              "copy_to": [
                "subject"
              ],
              "index": "not_analyzed",
              "type": "string"
            },
            "value": {
              "copy_to": [
                "arXiv",
                "eprint"
              ],
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "author": {
          "type": "string"
        },
        "authors": {
          "include_in_parent": true,
          "properties": {
            "affiliations": {
              "properties": {
                "recid": {
                  "type": "integer"
                },
                "value": {
                  "copy_to": [
                    "affiliation"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            },
            "full_name": {
              "analyzer": "no_tokenizing_analyzer",
              "copy_to": [
                "exactauthor"
              ],
              "type": "string"
            },
            "name_variations": {
              "analyzer": "no_tokenizing_analyzer",
              "copy_to": [
                "global_fulltext",
                "author"
              ],
              "type": "string"
            },
            "signature_block": {
              "type": "string"
            }
          },
          "type": "nested"
        },
        "citation_count": {
          "type": "integer"
        },
        "cnum": {
          "index": "not_analyzed",
          "type": "string"
        },
        "collaboration": {
          "properties": {
            "recid": {
              "type": "integer"
            },
            "value": {
              "copy_to": [
                "global_fulltext"
              ],
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "collection": {
          "index": "not_analyzed",
          "type": "string"
        },
        "collections": {
          "properties": {
            "primary": {
              "copy_to": [
                "collection"
              ],
              "index": "not_analyzed",
              "type": "string"
            },
            "secondary": {
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "date": {
          "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
          "type": "date"
        },
        "date_and_time_of_latest_transaction": {
          "format": "yyyy||yyyyMM||yyyyMMdd||yyyyMMddHHmmss||yyyyMMddHHmmss.S",
          "type": "date"
        },
        "division": {
          "type": "string"
        },
        "doc_type": {
          "index": "not_analyzed",
          "type": "string"
        },
        "doi": {
          "index": "not_analyzed",
          "type": "string"
        },
        "dois": {
          "properties": {
            "value": {
              "copy_to": [
                "doi"
              ],
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "earliest_date": {
          "format": "yyyy||yyyyMM||yyyyMMdd||yyyy-MM-dd||yyyyMMddHHmmss||yyyyMMddHHmmss.S||dd MM yyyy||dd MMM yyyy||MMM yyyy||MMM yyyy?||yyyy ('repr'.1964.)",
          "type": "date"
        },
        "eprint": {
          "index": "not_analyzed",
          "type": "string"
        },
        "exactauthor": {
          "fields": {
            "raw": {
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "string"
        },
        "experiment": {
          "index": "not_analyzed",
          "type": "string"
        },
        "experiment_name": {
          "copy_to": [
            "experimentautocomplete"
          ],
          "type": "string"
        },
        "experimentautocomplete": {
          "type": "string"
        },
        "facet_inspire_doc_type": {
          "copy_to": [
            "doc_type"
          ],
          "index": "not_analyzed",
          "type": "string"
        },
        "facet_inspire_subjects": {
          "index": "not_analyzed",
          "type": "string"
        },
        "global_default": {
          "analyzer": "basic_analyzer",
          "type": "string"
        },
        "global_fulltext": {
          "type": "string"
        },
        "hidden_notes": {
          "properties": {
            "cds": {
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "institution": {
          "properties": {
            "affiliation": {
              "copy_to": [
                "affautocomplete"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "isbn": {
          "index": "not_analyzed",
          "type": "string"
        },
        "isbns": {
          "properties": {
            "value": {
              "copy_to": [
                "isbn"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "publication_info": {
          "properties": {
            "cnum": {
              "copy_to": [
                "cnum"
              ],
              "index": "not_analyzed",
              "type": "string"
            },
            "conference_recid": {
              "type": "integer"
            },
            "journal_recid": {
              "type": "integer"
            },
            "journal_volume": {
              "index": "not_analyzed",
              "type": "string"
            },
            "parent_recid": {
              "type": "integer"
            },
            "year": {
              "type": "integer"
            }
          },
          "type": "object"
        },
        "references": {
          "properties": {
            "recid": {
              "copy_to": [
                "refersto"
              ],
              "type": "integer"
            }
          },
          "type": "object"
        },
        "refersto": {
          "type": "integer"
        },
        "report_numbers": {
          "properties": {
            "value": {
              "copy_to": [
                "reportnumber"
              ],
              "index": "not_analyzed",
              "type": "string"
            }
          },
          "type": "object"
        },
        "reportnumber": {
          "index": "not_analyzed",
          "type": "string"
        },
        "subject": {
          "index": "not_analyzed",
          "type": "string"
        },
        "subject_terms": {
          "properties": {
            "scheme": {
              "type": "string"
            },
            "source": {
              "type": "string"
            },
            "term": {
              "copy_to": [
                "subject"
              ],
              "type": "string"
            }
          },
          "type": "object"
        },
        "title": {
          "type": "string"
        },
        "titles": {
          "properties": {
            "source": {
              "type": "string"
            },
            "subtitle": {
              "type": "string"
            },
            "title": {
              "copy_to": "title",
              "fields": {
                "raw": {
                  "index": "not_analyzed",
                  "type": "string"
                }
              },
              "type": "string"
            }
          },
          "type": "object"
        }
      }
    }
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "basic_analyzer": {
          "filter": [
            "asciifold_with_orig",
            "lowercase"
          ],
          "tokenizer": "icu_tokenizer",
          "type": "custom"
        },
        "no_tokenizing_analyzer": {
          "filter": [
            "asciifold_with_orig",
            "lowercase",
            "whitespace_remove",
            "trim"
          ],
          "tokenizer": "keyword",
          "type": "custom"
        }
      },
      "filter": {
        "asciifold_with_orig": {
          "preserve_original": true,
          "type": "icu_folding"
        },
        "whitespace_remove": {
          "pattern": "[ \t]{2,}",
          "replacement": " ",
          "type": "pattern_replace"
        }
      }
    },
    "index.percolator.map_unmapped_fields_as_string": true,
    "index.query.default_field": "global_fulltext"
  }
}
